---
type Props = {
    name?: string;
}

const {name = "Card Component"} = Astro.props;
---

<div
  class="group relative overflow-hidden w-[280px] h-[390px] 
         bg-gradient-to-b from-[#798998] to-white rounded-xl 
         border-4 border-secondary 
         transition-transform duration-300 ease-in-out 
         hover:scale-105 hover:shadow-lg hover:border-primary"
>
  <picture>
    <img 
      class="absolute top-0 inset-0 transition-transform duration-500 ease-in-out group-hover:scale-110"
      src="/BOLSA-HIELO.webp" 
      alt=""
    >
  </picture>
  <div class="flex justify-center items-center h-[60px] absolute bottom-0 left-0 right-0 
              bg-gradient-to-t from-secondary/90 to-transparent text-center 
              transition-all duration-300">
    <span class="text-white font-bold text-[22px]">{name}</span>
  </div>
</div>
